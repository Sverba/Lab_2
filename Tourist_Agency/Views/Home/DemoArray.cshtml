@using Tourist_Agency.Models
@model Travel[]

@{
    ViewBag.Title = "Путівки";
    Layout = "~/Views/_BasicLayout.cshtml";
}
@if (Model.Length > 0)
{
    <table>
        <thead><tr><th>Назва</th><th>Ціна</th></tr></thead>
        <tbody>
            @foreach (Travel p in Model)
            {
                <tr>
                    <td>@p.Name</td>
                    <td>$@p.Price</td>
                </tr>
            }
        </tbody>
    </table> }
else
{
    <h2>Інформація недоступна</h2>}